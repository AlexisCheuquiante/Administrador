@model Administrador.Models.HomeModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/Home.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" />
    <title>Home</title>
    <!-- Estilos y funciones básicas de funcionamiento -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!-- Semantic UI CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>


    <style>

        html, body {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('../../Recursos/Imagenes/Fondo.jpg');
            background-size: cover;
            background-repeat: repeat;
            height: 100%;
            font-family: 'Numans', sans-serif;
        }

        .card-img-top {
            width: 150px;
        }

        .contenedor-imagen {
            width: 100%;
            text-align: center;
        }
    </style>



    <script>

        $(document).ready(function () {

            $('.ui.selection.dropdown').dropdown();
            $('.ui.menu .ui.dropdown').dropdown({
                on: 'hover'
            });
        });

    </script>
</head>
<body>
    <div class="ui link cards">
        <div class="container">
            <div style="height:5px"></div>
            <h2 style="color:white" class="ui center aligned header">
                @*<img src="~/Recursos/Imagenes/IconoAsmar.png" class="ui image">*@
                Bienvenido al sistema de administración de edificios @Model.Nombre
            </h2>
            <br />
            <div class="ui link cards">
                <div class="container">
                    <div class="row">

                        @*CargadorProductos*@
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm" style="opacity:.85">
                                <div class="contenedor-imagen">
                                    <img class="card-img-top" src="~/Recursos/Imagenes/BtnUser.png" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <p class="card-text">Aquí podrás cargar los productos desde el excel de stock vs consumo de Rayén.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <div id="btnMarketPlace" onclick="window.location.href = '/AdminPersonas'" class="ui right labeled icon black button">
                                                Copropietarios
                                                <i class="hand point left icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm" style="opacity:.85">
                                <div class="contenedor-imagen">
                                    <img class="card-img-top" src="~/Recursos/Imagenes/Btnveh.png" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <p class="card-text">Aquí podrás cargar los productos desde el excel de stock vs consumo de Rayén.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <div id="btnMarketPlace" onclick="window.location.href = '/MantenedorVehiculos?limpiar=1'" class="ui right labeled icon black button">
                                                Vehículos
                                                <i class="hand point left icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm" style="opacity:.85">
                                <div class="contenedor-imagen">
                                    <img class="card-img-top" src="~/Recursos/Imagenes/BtnLog.png" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <p class="card-text">Aquí podrás ver el log de los movimientos más importantes dentro del sistema.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <div id="btnMarketPlace" onclick="window.location.href = '/log'" class="ui right labeled icon black button">
                                                Log del sistema
                                                <i class="hand point left icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm" style="opacity:.85">
                                <div class="contenedor-imagen">
                                    <img class="card-img-top" src="~/Recursos/Imagenes/BtnUser.png" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <p class="card-text">Aquí podrás crear y editar los usuarios del sistema y sus privilegios.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <div id="btnMarketPlace" onclick="window.location.href = '/MantenedorUsuarios'" class="ui right labeled icon black button">
                                                Usuarios y privilegios
                                                <i class="hand point left icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm" style="opacity:.85">
                                <div class="contenedor-imagen">
                                    <img class="card-img-top" src="~/Recursos/Imagenes/btnRecintos.png" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <p class="card-text">Aquí podrás crear y editar los recintos del sistema.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <div id="btnMarketPlace" onclick="window.location.href = '/MantenedorRecintos'" class="ui right labeled icon black button">
                                                Recintos
                                                <i class="hand point left icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm" style="opacity:.85">
                                <div class="contenedor-imagen">
                                    <img class="card-img-top" src="~/Recursos/Imagenes/btnYou.png" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <p class="card-text">Aquí podrás ver videos de referencia para el uso de los módulos.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <div id="btnMarketPlace" onclick="window.location.href = '/videos'" class="ui right labeled icon black button">
                                                ver videos
                                                <i class="youtube icon"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</body>
</html>